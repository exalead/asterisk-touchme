                    /* San Francisco */
                    '^00142424240' . $exaPlanSF . '$',
                    /* Mycompany BV Amersfoort */
                    '^0031234567892' . '$'
                    );
$exaIntDial = '^' . $exaPlan . '$';
$exaIntDialSF = '^' . $exaPlanSF . '$';
$exaIntAll = array(/* internal numbers */
                   $exaIntDial,
                   $exaIntDialSF,
                   /* internal number without external ones */
                   '^8[05][0-9][0-9]$',
                   /* special numbers (*num) */
                   '^\*[0-9]+$');

